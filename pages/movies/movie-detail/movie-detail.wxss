/* pages/movies/movie-detail/movie-detail.wxss */

@import "../stars/stars-template.wxss";
.container {
    display: flex;
    flex-direction: column;
}

.head-img {
    width: 100%;
    height: 320rpx;
    -webkit-filter: blur(10px);
}

.head-img-hover {
    width: 100%;
    height: 320rpx;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
}

.main-title {
    font-size: 19px;
    color: #fff;
    font-weight: 600;
    margin-top: 50rpx;
    margin-left: 40rpx;
    letter-spacing: 2;
}

.sub-title {
    font-size: 28rpx;
    color: #fff;
    margin-top: 30rpx;
    margin-left: 40rpx;
}

.like {
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
    margin-left: 40rpx;
}

.highlight-font {
    color: #f21146;
    font-size: 22rpx;
    margin-right: 10rpx;
}

.plain-font {
    color: #666;
    font-size: 22rpx;
    margin-right: 30rpx;
}

.movie-img {
    width: 175rpx;
    height: 238rpx;
    position: absolute;
    top: 160rpx;
    right: 30rpx;
}

.summary {
    margin-left: 40rpx;
    margin-top: 40rpx;
    color: #777777;
}

.flex-row {
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.mark {
    margin-right: 30rpx;
    white-space: nowrap;
    color: #999999;
}

.hr {
    margin-top: 45rpx;
    height: 1px;
    width: 100%;
    background-color: #d9d9d9;
}

.syuopsis {
    margin-left: 40rpx;
    margin-top: 50rpx;
    display: flex;
    flex-direction: column;
}

.syuopsis-font {
    color: #999999;
}

.cast {
    margin: 50rpx 40rpx 0 40rpx;
    display: flex;
    flex-direction: column;
}

.cast-font {
    margin-bottom: 40rpx;
    color: #999999;
}

.cast-imgs {
    white-space: nowrap;
}

.cast-container {
    display: inline-flex;
    flex-direction: column;
    margin-left: 40rpx;
    margin-bottom: 50rpx;
    width: 170rpx;
    text-align: center;
    white-space: normal;
}

.cast-img {
    width: 170rpx;
    height: 210rpx;
}

.cast-name {
    margin: 10rpx auto 0;
}